<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/video_item"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="horizontal"
    android:paddingBottom="8dp"
    android:background="@drawable/main_item_select_effect">

    <FrameLayout
        android:layout_width="180dp"
        android:layout_height="match_parent"
        android:clipToOutline="true"
        android:background="@drawable/main_item_image_shape">
        <ImageView
            android:id="@+id/video_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/sides_image"
            android:scaleType="centerCrop" />
        <TextView
            android:id="@+id/video_upload_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|start"
            android:padding="2dp"
            android:text="2022-10-11"
            android:textColor="@color/white"
            android:visibility="invisible"/>
        <TextView
            android:id="@+id/video_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:padding="2dp"
            android:text="02:32"
            android:textColor="@color/white"/>
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="6dp"
        android:theme="@style/Theme.Sliding.Light">

        <TextView
            android:id="@+id/video_title"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:text="这是一段尽可能要长一点的标题文字【测试】"
            android:textColor="@color/black"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/video_owner"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="寂灭光"
            android:includeFontPadding="false"/>
        <TextView
            android:id="@+id/video_info"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="156 播放 · 31弹幕"
            android:gravity="bottom"
            android:includeFontPadding="false" />
    </LinearLayout>

</LinearLayout>